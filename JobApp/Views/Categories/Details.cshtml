@model JobApp.Models.Category

<div style="margin:2%">
    <h3 style="color:darkcyan">Details About This Category</h3>
    <hr />
    <div style="border:groove 1px #ebebeb;border-radius:7px; margin: 2% 15%">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
            <hr />
            <dt>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryDescription)
            </dd>

        </dl>
        <hr />

        @using (Html.BeginForm())
    {
            @Html.AntiForgeryToken()

            <p style="text-align:center">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
            </p>
    }
        <br />
    </div>

</div>
@model IEnumerable<JobApp.Models.Job>

@{
    ViewBag.Title = "Search";
}

<div class="panel panel-default" style="padding:15px;">
    <h1 class="panel-heading">Search Result</h1>
    <div class="row">
        <div class="container">
            @foreach (var subItem in Model)
            {
                <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; height:350px;text-align:center">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <div style="margin: 4% 0">
                        <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                        <h5>@Html.DisplayFor(modelItem => subItem.JobContent)</h5>
                    </div>
                    @Html.ActionLink("Details", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-warning btn-block" })
                </div>
            }
        </div>
    </div>
</div>





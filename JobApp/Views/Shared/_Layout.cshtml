<body>


    <header id="header" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, .5)), url(../../Content/img/3333.jpg);background-position: center;background-repeat: no-repeat;">
        <div class="container">
            <div class="row align-items-center justify-content-between d-flex">
               
                <nav id="nav-menu-container">

                    <ul class="nav-menu">
                        <li><img class="logo" src="~/Content/img/logo.png" alt="" title="" /></li>
                        <li class="menu-active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("All Jobs", "GetAllJobs", "Jobs")</li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Create Category", "Create", "Categories")</li>
                            <li>@Html.ActionLink("Create Role", "CreateRole", "Roles")</li>

                        }

                    </ul>
                    @Html.Partial("_Login")
                </nav><!-- #nav-menu-container -->
            </div>
        </div>
    </header>
    
    <!-- #header -->




    <div class="container"  style="margin-top: 4%">
        @RenderBody()

    </div>


    <!-- start footer Area -->
